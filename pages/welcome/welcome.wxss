/* pages/welcome/welcome.wxss */
/* . 表名样式类 */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #b3d4db;
  

}
.avatar{ 
  width: 200rpx;
  height: 200rpx;
  margin-top: 250rpx;    /* 图片和顶部距离*/
  border-radius: 50%;    /* 把图片变成圆形*/
  overflow:hidden;
}
.motto{
  
  margin-top: 100rpx;
  font-size: 36rpx;    /* 字体大小 */
  font-weight: bold; /*加粗*/
}
.journey-container{
  border: 1px solid #405f80;
  width: 250rpx;
  height: 80rpx;
  border-radius: 5px; /*按钮圆角*/
  text-align: center;  /* 1文本居中 */
  margin-top: 200rpx;
}
.journey{
  font-size: 30rpx;
  color: #405f80;
  line-height: 80rpx;  /* 1.1文本居中 */
  font-weight: bold;
}
page{
  background-color: #b3d4db; /*全屏颜色*/
}